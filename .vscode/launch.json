{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "BMP attach (cortex)",
      "cwd": "${workspaceRoot}",
      "executable": "${workspaceRoot}/build/bluepill-base.elf",
      "request": "attach",
      "type": "cortex-debug",
      "servertype": "bmp",
      "interface": "swd",
      "device": "STM32F103",
      "BMPGDBSerialPort": "/dev/ttyACM0",
      "runToEntryPoint": "main",
      "preAttachCommands": [
        "cd ${workspaceRoot}/build",
        "target extended-remote /dev/ttyACM0",
        "monitor swdp_scan",
        "attach 1",
        "file bluepill-base.elf",
        "load",
        "cd ${workspaceRoot}",
        "set mem inaccessible-by-default off",
        // "stop"
        "break main"
      ],
      // "preLaunchCommands": [
      //     "set async-remote false",
      //     "set remote-timeout 20"
      // ],
      "preRestartCommands": ["enable breakpoint", "break main"],
      "rttConfig": {
        "enabled": false,
        "address": "auto",
        "decoders": [
          {
            "label": "",
            "port": 0,
            "type": "console"
          }
        ]
      }
    },
    {
      "name": "BMP cppdbg",
      "type": "cppdbg",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "MIMode": "gdb",
      "targetArchitecture": "arm",
      "logging": {
        "engineLogging": true
      },
      "program": "${workspaceRoot}/build/bluepill-base.elf",
      "miDebuggerPath": "arm-none-eabi-gdb",
      "customLaunchSetupCommands": [
        { "text": "cd ${workspaceRoot}/build" },
        { "text": "target extended-remote /dev/ttyACM0" },
        // { "text": "monitor tpwr enable" },
        { "text": "monitor swdp_scan" },
        { "text": "attach 1" },
        { "text": "file bluepill-base.elf" },
        { "text": "load" },
        { "text": "cd ${workspaceRoot}" },
        { "text": "set mem inaccessible-by-default off" },
        { "text": "break main" }
      ],
      "serverLaunchTimeout": 10000,
      "windows": {
        "miDebuggerPath": "arm-none-eabi-gdb.exe"
      },
      "linux": {
        "miDebuggerPath": "arm-none-eabi-gdb"
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
